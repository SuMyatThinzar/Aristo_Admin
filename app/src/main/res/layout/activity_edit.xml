<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.aristo.admin.view.adminProfile.EditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_medium_3"
        android:paddingEnd="@dimen/margin_medium_3"
        android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/background"
            android:layout_marginStart="-12dp"
            android:src="@drawable/baseline_arrow_back_black_24"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text="ပြင်ဆင်ရန်"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="@dimen/margin_medium_3"
            app:cardCornerRadius="@dimen/margin_medium"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCompanyLogo"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/logo"
                    android:scaleType="centerCrop"/>

                <Button
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    android:backgroundTint="#FF404040"
                    android:visibility="gone"
                    android:drawableLeft="@drawable/outline_photo_camera_white_24"
                    android:paddingStart="@dimen/margin_medium_2"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    android:text="Edit "
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:layout_marginEnd="@dimen/margin_medium_3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="လုပ်ငန်းနာမည်"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:background="@drawable/background_edit_text"
            android:enabled="false"
            android:text="@string/company_name"
            android:paddingStart="@dimen/margin_medium"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="လုပ်ငန်းလိပ်စာ"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:paddingStart="@dimen/margin_medium"
            android:singleLine="true"
            android:background="@drawable/background_edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="ဖုန်းနံပါတ်"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:paddingStart="@dimen/margin_medium"
            android:inputType="phone"
            android:singleLine="true"
            android:background="@drawable/background_edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Viber ဖုန်းနံပါတ်"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyViberNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:paddingStart="@dimen/margin_medium"
            android:inputType="phone"
            android:singleLine="true"
            android:background="@drawable/background_edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Facebook Page နာမည်"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyFbPage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:paddingStart="@dimen/margin_medium"
            android:singleLine="true"
            android:background="@drawable/background_edit_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Facebook Page လင့်ခ်"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCompanyFbPageLink"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="@dimen/margin_card_medium_2"
            android:layout_marginBottom="@dimen/margin_medium_3"
            android:paddingStart="@dimen/margin_medium"
            android:singleLine="true"
            android:background="@drawable/background_edit_text" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_xxlarge"
            android:paddingStart="@dimen/margin_medium"
            android:padding="@dimen/margin_card_medium"
            android:text="သိမ်းမည်"
            android:textColor="@color/white"
            android:background="@drawable/background_button"/>

    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>